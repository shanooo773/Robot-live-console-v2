# Docker Environment Configuration
# Copy this to .env when using Docker Compose

# Database Configuration (MySQL in Docker)
DATABASE_TYPE=mysql
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=robot_console
MYSQL_PASSWORD=robot_console_pass
MYSQL_DATABASE=robot_console
MYSQL_ROOT_PASSWORD=rootpassword

# JWT Secret Key for Authentication
SECRET_KEY=docker-development-secret-key-change-in-production

# Environment
ENVIRONMENT=development

# CORS Origins for Docker
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost
PRODUCTION_CORS_ORIGINS=http://localhost,https://your-domain.com

# Server Configuration (Docker internal)
HOST=0.0.0.0
PORT=8000

# Video Storage Configuration
VIDEO_STORAGE_PATH=/app/videos
MAX_VIDEO_SIZE_MB=100

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Demo User Credentials
DEMO_USER_EMAIL=demo@user.com
DEMO_USER_PASSWORD=password
DEMO_ADMIN_EMAIL=admin@demo.com
DEMO_ADMIN_PASSWORD=password

# Data Directory (for volume mounts)
DATA_DIR=./data

# VPS Configuration (for production)
VPS_URL=http://your-vps-ip

# Frontend Configuration
VITE_API_URL=/api